/*
 CSS for styling Gtk3 widgets
 */

/*
 under some themes, toggle buttons don't have any border, are
 crammed together too closely, and don't show any difference
 when they are checked or not.
 */
 
GtkToggleButton {
    border: 1px solid shade (@theme_bg_color, 0.9) ;
    padding: 4px;
}

/*
GtkToolbar GtkToggleButton:checked {
    background-color: shade (@theme_bg_color, 0.9);
}

GtkMenuBar {
    shadow_type: none;
}

GtkStatusbar {
    shadow_type: none;
}

GtkPaned {
    handle_size: 5;
    resize: true;
    shrink: true;
}
*/

GtkWindow, GtkDialog, GtkFileSelection {
}

GtkTextView {
    color: black;
    font-family: Monospace;
    font-size: 10;
    text-shadow: none;
}

GtkLabel {
    text-shadow: none;
}

GtkButton, GtkComboBox {
    -GtkWidget-focus-line-width: 0;
    text-shadow: none;
    margin: 2px;
    padding: 2px;
}

GtkEntry {
    margin: 2px;
    padding: 2px;
}

GtkButton:hover, GtkComboBox:hover {
    background-color: forestgreen;
    color: yellow;
    background-image: none;
    text-shadow: none;
}

button {
    -GtkWidget-focus-line-width: 0;
    background-color: gray80;
    color: black;
    background-image: none;
}

button:hover {
    background-color: forestgreen;
    color: yellow;
    background-image: none;
}

button:active {
    background-color: DeepSkyBlue;
    color: yellow;
    background-image: none;
}


